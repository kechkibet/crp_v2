<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.oldigital.crpv2.web.ministries.MinistriesEdit"
        datasource="ministriesDs"
        focusComponent="fieldGroup"
        messagesPack="com.oldigital.crpv2.web.ministries">
    <dsContext>
        <datasource id="ministriesDs"
                    class="com.oldigital.crpv2.entity.Ministries"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="ministriesDs">
            <column width="250px">
                <field property="ministryName"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
